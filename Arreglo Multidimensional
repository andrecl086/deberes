 # Definir una matriz de ejemplo (3x3)
 matriz =[
      [1,2,3],
      [4,5,6],
      [7,8,9]
]

# Función para buscar un valor en la matriz
def  buscar_valor ( matriz , valor ):
    para  fila  en  rango ( len ( matriz )):
        para  columna  en  rango ( len ( matriz [ 0 ])):
            if  matriz [ fila ][ columna ] ==  valor :
                volver  fila , columna
    devolver  Ninguno

# Valor que deseas buscar
valor_buscado  =  5

# Realizar la búsqueda
posicion  =  buscar_valor ( matriz , valor_buscado )

# Mostrar el resultado
si  posicion :
    print ( f"El valor { valor_buscado } se encontró en la posición: fila { posición [ 0 ] +  1 } , columna { posición [ 1 ] +  1 } . " )
demás :
    print ( f"El valor { valor_buscado } no se encontró en la matriz." )
